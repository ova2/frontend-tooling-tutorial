{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2020", "dom"],
    "noEmitOnError": true,
    "noImplicitAny": true,
    "compileOnSave": false,
    "buildOnSave": false,
    "sourceRoot": "src",
    "outDir": "dist",
    "types": [
      "node",
      "jasmine"
    ],
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
}